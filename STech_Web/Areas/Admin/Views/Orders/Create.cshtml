
@{
    ViewBag.Title = "Tạo đơn hàng";
}

<section class="create-order position-ralative">
    <h2 class="title">Tạo đơn hàng</h2>
    <div class="breadcrumb">
        <ul class="breadcrumb-list d-flex">
            <li class="breadcrumb-item">
                <a href="/admin">Admin</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/admin/orders"> Quản lý đơn hàng</a>
            </li>
            <li class="breadcrumb-item">
                Tạo đơn hàng
            </li>
        </ul>
    </div>
    <div class="create-order-box mb-4">
        <div class="form-box-header">
            <h5 class="form-header-text">Thông tin khách hàng</h5>
        </div>
        <div class="create-order-items">
            <div>
                <form action="#" method="post" class="d-flex align-items-stretch justify-content-between gap-1 my-3 position-ralative search-cus-by-phone">
                    <input type="text" id="search-cus-by-phone" value="" placeholder="Số điện thoại" required autocomplete="off" />
                    <button class="order-btn search-cus-bp-btn">
                        <i class='bx bx-search'></i>
                    </button>
                    <div class="cus-search-auto-complete position-absolute">

                    </div>
                </form>
                <input type="hidden" name="cusID" id="cusID" value="" />
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusName">Tên KH</label>
                    <input type="text" name="cusName" id="cusName" value="" class="form-add-input" required />
                </div>
                <div class="d-flex align-items-center gap-5 my-3">
                    <span>Giới tính</span>
                    <div class="d-flex gap-3">
                        <div>
                            <input type="radio" name="cusGender" id="cusGender-Male" value="Nam" />
                            <label for="cusGender-Male">Nam</label>
                        </div>
                        <div>
                            <input type="radio" name="cusGender" id="cusGender-FeMale" value="Nữ" />
                            <label for="cusGender-FeMale">Nữ</label>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusPhone">Số ĐT</label>
                    <input type="text" name="cusPhone" id="cusPhone" value="" class="form-add-input" required />
                </div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusAddress">Địa chỉ</label>
                    <input type="text" name="cusAddress" id="cusAddress" value="" class="form-add-input" required />
                </div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusEmail">Email</label>
                    <input type="text" name="cusEmail" id="cusEmail" value="" class="form-add-input" />
                </div>
            </div>
            <div>
                <div class="create-order-error gap-3 my-3">

                </div>
            </div>
        </div>
        <div class="form-box-header">
            <h5 class="form-header-text mt-3">Thông tin đơn hàng</h5>
        </div>
        <div class="add-order-products">
            <form action="#" method="post" class="d-flex align-items-stretch justify-content-between gap-1 my-3 search-pro-id">
                <input type="text" id="search-pro-id" value="" placeholder="Nhập mã sản phẩm" required autocomplete="off" />
                <button class="order-btn search-pro-id-btn">
                    <i class='bx bx-search'></i>
                </button>
            </form>
        </div>
        <div class="order-create-products my-3">
            <table class="table">
                <tr>
                    <th>Mã sản phẩm</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá bán</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                    <th></th>
                </tr>
            </table>
        </div>
        <div class="form-box-header">
            <h5 class="form-header-text mt-3">Thanh toán</h5>
        </div>
        <div class="order-pay">
            <div class="select-payment-method d-flex column-gap-5 row-gap-2 my-3 flex-wrap">
                <div class="payment-method-item">
                    <input type="radio" name="paymentmethod" value="Tiền mặt" id="cash" />
                    <label for="cash">Tiền mặt</label>
                </div>
                <div class="payment-method-item">
                    <input type="radio" name="paymentmethod" value="Chuyển khoản" id="transfer" />
                    <label for="transfer">Chuyển khoản</label>
                </div>
                <div class="payment-method-item">
                    <input type="radio" name="paymentmethod" value="Thanh toán khi nhận hàng" id="cod" />
                    <label for="cod">Thanh toán khi nhận hàng</label>
                </div>
                <div class="payment-method-item">
                    <input type="radio" name="paymentmethod" value="Visa/Mastercard" id="card" />
                    <label for="card">VISA/MASTERCARD</label>
                </div>
                <div class="payment-method-item">
                    <input type="radio" name="paymentmethod" value="Paypal" id="paypal" />
                    <label for="paypal">Paypal</label>
                </div>
            </div>
            <div class="order-totalprice d-flex align-items-center mt-5">
                <p>Tổng tiền:&nbsp;&nbsp;</p>
                <span>0đ</span>
            </div>
        </div>
        <div class="create-order-action mt-2">
            <button class="order-btn create-order-btn">
                TẠO ĐƠN HÀNG
            </button>
        </div>
    </div>
</section>