<div class="create-customer-wrapper">
    <form action="#" method="post" class="create-customer-box position-relative">
        <div class="close-form close-create-customer position-absolute">
            <i class="fa-solid fa-xmark"></i>
        </div>
        <h4 class="text-center mb-4">Tạo mới khách hàng</h4>
        <div class="form-box-header">
            <h5 class="form-header-text">Thông tin khách hàng</h5>
        </div>
        <div class="form-create-customer">
            <div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusPhone">Họ tên</label>
                    <input type="text" name="create-cusName" id="create-cusName" value="" class="form-add-input" required />
                </div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusPhone">Số ĐT</label>
                    <input type="text" name="create-cusPhone" id="create-cusPhone" value="" class="form-add-input" required />
                </div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusPhone">Địa chỉ</label>
                    <input type="text" name="create-cusAddress" id="create-cusAddress" value="" class="form-add-input" required />
                </div>
            </div>
            <div>
                <div class="d-flex align-items-center gap-5 my-3">
                    <span>Giới tính</span>
                    <div class="d-flex gap-3">
                        <div>
                            <input type="radio" name="create-cusGender" id="cusGender-Male" value="Nam" required />
                            <label for="cusGender-Male">Nam</label>
                        </div>
                        <div>
                            <input type="radio" name="create-cusGender" id="cusGender-FeMale" value="Nữ" required />
                            <label for="cusGender-FeMale">Nữ</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusPhone">Ngày sinh</label>
                    <input type="text" name="cusPhone" id="cusPhone" value="" class="form-add-input" required />
                </div>
                <div class="d-flex align-items-center justify-content-between gap-3 my-3">
                    <label for="cusPhone">Email</label>
                    <input type="text" name="cusPhone" id="cusPhone" value="" class="form-add-input" required />
                </div>
            </div>
        </div>
        <div class="form-box-header">
            <h5 class="form-header-text">Tài khoản đăng nhập</h5>
        </div>
        <button class="order-btn frm-create-cusomer-btn">
            TẠO KHÁCH HÀNG
        </button>
    </form>
</div>