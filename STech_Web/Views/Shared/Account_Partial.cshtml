                <input type="password" id="reset-password" name="password" value="" class="form-input" required />
                <label for="reset-password" class="input-label position-absolute">Mật khẩu</label>
            </div>
            <div class="form-input-box position-relative d-flex align-items-center">
                <input type="password" id="re-enter-reset-password" name="password" value="" class="form-input" required />
